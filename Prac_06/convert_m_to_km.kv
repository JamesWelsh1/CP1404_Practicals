BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '34'
            font_size: 60
            id: input_miles
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'up'
                on_release: app.handle_increment(1)
            Button:
                text: 'down'
                on_release: app.handle_increment(-1)

    Button:
        text: 'convert m to km'
        on_release: app.handle_convert()
    Label:
        id: answer_label
